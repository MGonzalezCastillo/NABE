@{
    ViewData["Title"] = "Crear PerfilESSSSSTETETE";
}

<div class="my-4">
    <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
        <ol class="breadcrumb breadcrumb-chevron p-3 bg-body-tertiary rounded-3">
            <li class="breadcrumb-item">
                <a asp-controller="Perfiles" asp-action="Index" class="link-body-emphasis fw-semibold text-decoration-none">
                    <i class="bi bi-shuffle me-2"></i>
                    <span>Perfiles</span>
                </a>
            </li>
            <li class="breadcrumb-item active">
                <i class="bi bi-geo me-2"></i>
                <span>@ViewData["Title"]</span>
            </li>
        </ol>
    </nav>
</div>

<div class="row">
    <div class="col-xxl-5 col-xl-6 col-lg-8 col-md-12 col-12">
        <h4 class="mb-3">@ViewData["Title"]</h4>
        <form asp-controller="Perfiles" asp-action="Crear" class="needs-validation" method="post">

            <div class="row g-3">
                <div class="col-sm-6">
                    <label for="Clave" class="form-label">Clave</label>
                    <input type="text" class="form-control" id="" placeholder="">
                </div>
            </div>

            <div class="row g-3">
                <div class="col-sm-6">
                    <label for="Descripcion" class="form-label">Descripción</label>
                    <input type="text" class="form-control" id="" placeholder="">
                </div>
            </div>

            <hr class="my-4">

            <button class="w-100 btn btn-primary btn-lg" type="submit">Guardar</button>
        </form>
    </div>
</div>