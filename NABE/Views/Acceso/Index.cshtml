@{
}

<!doctype html>

<html>
<body>
    <main class="form-signin text-center w-100 m-auto">
        <form asp-controller="Acceso" asp-action="Index" method="post">
            <img class="mb-4" src="~/assets/brand/bootstrap-logo.svg" alt="" width="72" height="57">
            <h1 class="h3 mb-3 fw-normal">Por favor ingresa</h1>

            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger" role="alert">
                    @ViewBag.Error
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <div class="form-floating">
                <input type="text" class="form-control" id="usuario">
                <label for="usuario">Usuario</label>
                @* <span asp-validation-for="usuario"></span> *@
            </div>

            <div class="form-floating">
                <input type="password" class="form-control" id="password" placeholder="Contraseña">
                <label for="password">Contraseña</label>
                @* <span asp-validation-for="password"></span> *@
            </div>

            <div class="form-check text-start my-3">
                <input class="form-check-input" type="checkbox" id="flexCheckDefault">
                <label class="form-check-label" for="flexCheckDefault">
                    Recordarme
                </label>
            </div>
            <button class="btn btn-primary w-100 py-2" type="submit">Ingresar</button>
            <p class="mt-5 mb-3 text-body-secondary">&copy; 2025</p>
        </form>
    </main>
</body>
</html>

