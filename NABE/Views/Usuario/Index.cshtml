@{
    ViewData["Title"] = "Crear Usuario";
}

<div class="my-4">
    <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
        <ol class="breadcrumb breadcrumb-chevron p-3 bg-body-tertiary rounded-3">
            <li class="breadcrumb-item">
                <a asp-controller="Perfiles" asp-action="Index" class="link-body-emphasis fw-semibold text-decoration-none">
                    <i class="bi bi-shuffle me-2"></i>
                    <span>Perfiles</span>
                </a>
            </li>
            <li class="breadcrumb-item active">
                <i class="bi bi-geo me-2"></i>
                <span>@ViewData["Title"]</span>
            </li>
        </ol>
    </nav>
</div>

<div class="row">
    <div class="col-12">
        <h4 class="mb-3">@ViewData["Title"]</h4>

        <form asp-controller="Perfiles" asp-action="Crear" class="needs-validation" method="post">

            <div class="row g-4">

                <!-- COLUMNA IZQUIERDA -->
                <div class="col-md-6">

                    <div class="mb-3">
                        <label class="form-label">Nombre</label>
                        <input type="text" class="form-control">
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Apellido Paterno</label>
                        <input type="text" class="form-control">
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Apellido Materno</label>
                        <input type="text" class="form-control">
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Teléfono</label>
                        <input type="text" class="form-control">
                    </div>

                </div>

                <!-- COLUMNA DERECHA -->
                <div class="col-md-6">

                    <div class="mb-3">
                        <label class="form-label">Correo</label>
                        <input type="email" class="form-control">
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Dirección</label>
                        <input type="text" class="form-control">
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Referencia</label>
                        <input type="text" class="form-control">
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Contraseña</label>
                        <input type="password" class="form-control">
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Confirmar Contraseña</label>
                        <input type="password" class="form-control">
                    </div>

                </div>

            </div>

            <hr class="my-4">

            <!-- BOTONES CENTRADOS -->
            <div class="d-flex justify-content-center gap-3">
                <button class="btn btn-primary btn-lg" type="submit">Guardar</button>
                <button class="btn btn-secondary btn-lg" type="button">Cancelar</button>
            </div>

        </form>
    </div>
</div>
